{
  "name": "webpack-boilerplate",
  "version": "1.0.0",
  "description": "Webpack boilerplate with Babel, SASS, ESLint and Prettier",
  "author": "Jesper Orb <jesperorb@gmail.com> (https://jesperorb.com/)",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --mode development",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --mode production"
  },
  "keywords": [
    "webpack",
    "babel",
    "sass",
    "eslint",
    "prettier"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.0.0-beta.44",
    "@babel/preset-env": "7.0.0-beta.44",
    "@babel/preset-stage-2": "7.0.0-beta.44",
    "babel-eslint": "8.2.3",
    "babel-loader": "8.0.0-beta.2",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-prettier": "2.6.0",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.8.3",
    "prettier": "1.12.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.20.3",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true,
          "arrowParens": "always",
          "semi": true
        }
      ]
    }
  }
}
